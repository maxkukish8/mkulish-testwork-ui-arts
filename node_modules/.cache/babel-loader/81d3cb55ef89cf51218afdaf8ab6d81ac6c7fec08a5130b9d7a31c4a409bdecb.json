{"ast":null,"code":"import \"core-js/modules/es.iterator.constructor.js\";\nimport \"core-js/modules/es.iterator.reduce.js\";\nimport { computed } from \"vue\";\n\n// Оголошуємо пропс cart\n\nexport default {\n  __name: 'ProductCart',\n  props: {\n    cart: {\n      type: Array,\n      required: true\n    }\n  },\n  emits: [\"increase-quantity\", \"decrease-quantity\", \"remove-from-cart\"],\n  setup(__props, {\n    expose: __expose\n  }) {\n    __expose();\n    const props = __props;\n\n    // Підрахунок ціни одного товару\n    const getItemPrice = item => {\n      const price = item.discountPrice || item.price;\n      return price * item.quantity;\n    };\n\n    // Підрахунок загальної суми, використовуємо props.cart\n    const totalAmount = computed(() => {\n      return props.cart.reduce((total, item) => total + getItemPrice(item), 0);\n    });\n    const __returned__ = {\n      props,\n      getItemPrice,\n      totalAmount,\n      computed\n    };\n    Object.defineProperty(__returned__, '__isScriptSetup', {\n      enumerable: false,\n      value: true\n    });\n    return __returned__;\n  }\n};","map":{"version":3,"names":["computed","props","__props","getItemPrice","item","price","discountPrice","quantity","totalAmount","cart","reduce","total"],"sources":["/home/max/Work/projects/mkulish-testwork-ui-arts/src/components/ProductCart.vue"],"sourcesContent":["<template>\n  <section class=\"cart\">\n    <h2>Cart</h2>\n    <div v-if=\"cart.length === 0\" class=\"empty-cart\">Cart is empty</div>\n    <div v-else class=\"cart-items\">\n      <div v-for=\"item in cart\" :key=\"item.id\" class=\"cart-item\">\n        <img :src=\"item.image\" :alt=\"item.name\" class=\"cart-item-image\" />\n        <div class=\"cart-item-details\">\n          <h3>{{ item.name }}</h3>\n          <p>{{ getItemPrice(item) }} UAH</p>\n          <div class=\"cart-actions\">\n            <div class=\"quantity-controls\">\n              <p>Qty:</p>\n              <div>\n                <butto